
@{
    ViewBag.Title = "Nhạc Việt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bảng xếp hạng tháng 8</h2>

<table class="table table-condensed">
    <tbody>
        @for (int i = 0; i < ViewBag.listSong.Count; i++)
        {
            string filePath = ViewBag.listSong[i].FilePath;
            string fileName = ViewBag.listSong[i].FileName;
            string song_Title = ViewBag.listSong[i].Title;
            string Artist = ViewBag.listSong[i].Artist;
            <tr>
                <td>@Html.ActionLink($"{song_Title} - {Artist}", "DetailsMusic", new { filePath = filePath, song_Title = song_Title, artist = Artist }) </td>
                <td>@Html.ActionLink("Tải về", "Download", new { filePath = filePath, fileName = fileName })</td>
            </tr>

        }
    </tbody>

</table>


